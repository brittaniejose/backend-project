<%- include('partials/header'); -%>

<div class="editRevContainer">
  <% if (review) { %>
  <article class="message is-link">
    <div class="message-header">
      <p>Your Review for <%= review.book.title %></p>
    </div>
    <div class="message-body"><%= review.content %></div>
  </article>

  <form
    id="editRev"
    action="/review-edit/<%= review.book.genre[0] %>/<%= review.book._id %>/<%= review._id %>"
    method="post"
    onSubmit="reviewSaved()">
    <p class="title is-5" id="editRevLabel">Edit Review Below</p>
    <textarea
      name="content"
      type="text"
      class="textarea is-medium is-focused"
      rows="10">
<%= review.content %>
    </textarea>
    <br />
    <button type="submit" id="saveRevEdit" class="button is-link is-rounded">
      Save
    </button>
    <span class="button is-rounded"
      ><a href="/genre/<%= review.book.genre[0] %>/<%= review.book._id %>"
        >Cancel</a
      ></span
    >
  </form>

  <%} else { %>
  <p>No review found</p>
  <% } %>
</div>

<script>
  function reviewSaved() {
    alert("Your edited review was saved");
  }
</script>

<%- include('partials/footer'); -%>
